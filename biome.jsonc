{
  "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
  "files": {
    "includes": ["**", "!**/node_modules", "!**/dist", "!**/specs", "!**/templates"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    },
    "globals": [
      "describe",
      "it",
      "test",
      "expect",
      "beforeAll",
      "afterAll",
      "beforeEach",
      "afterEach"
    ]
  }
}
